<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Get All User</title>
    </head>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        .btn-edit {
            background-color: orange;
            border: none;
            border-radius: 5px;
            width: 60px;
            height: 20px;
            display: inline-block;
        }

        .btn-delete {
            background-color: red;
            border: none;
            border-radius: 5px;
            width: 60px;
            height: 20px;
            display: inline-block;
        }
    </style>
    <body>
        <table style="width: 100%">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
            <% for(let i=0; i < datatable.length; i++) { %>
            <tr>
                <td><%= datatable[i].firstName %></td>
                <td><%= datatable[i].lastName %></td>
                <td><%= datatable[i].email %></td>
                <td><%= datatable[i].address %></td>
                <td>
                    <a
                        href="/edit-crud?id=<%= datatable[i].id %>"
                        class="btn-edit"
                        type="button"
                        >Edit</a
                    >
                    <a href="" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>
